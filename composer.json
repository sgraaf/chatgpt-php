{
    "name": "sgraaf/chatgpt-php",
    "type": "library",
    "description": "A convenient PHP wrapper for the OpenAI ChatGPT API.",
    "keywords": [
        "php",
        "ChatGPT",
        "chatbot",
        "openai",
        "api",
        "sdk",
        "client",
        "ChatGPT"
    ],
    "homepage": "https://github.com/sgraaf/chatgpt-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Steven van de Graaf",
            "email": "steven@vandegraaf.xyz",
            "role": "Developer"
        }
    ],
    "require": {
        "sgraaf/openai-php": "^0.1.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.14",
        "phpstan/phpstan": "^1.9"
    },
    "autoload": {
        "psr-4": {
            "ChatGPT\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    }
}
